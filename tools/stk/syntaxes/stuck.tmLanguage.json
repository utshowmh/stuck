{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "stuck",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line",
      "begin": "#",
      "end": "\n",
      "patterns": [
        {
          "name": "comment.line",
          "match": "#"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": " \\d+"
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "name": "variable.name",
          "match": "\\ @[a-z]|[A-Z]\\ "
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.stuck",
          "match": "\\b(var|if|then|else|while|do|end|print)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.stuck",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.stuck",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.stk"
}
